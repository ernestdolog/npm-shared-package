{
    "name": "@ernestdolog/error",
    "version": "0.0.0",
    "description": "Error package for a project",
    "main": "build/index.js",
    "type": "module",
    "scripts": {
        "doc:gen": "typedoc",
        "build": "rm -fr ./build && tsc && rm -fr ./build/__tests__",
        "prettier:check": "prettier -l . --ignore-path ../../.prettierignore",
        "prettier:fix": "prettier --write . --ignore-path ../../.prettierignore",
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "lint": "npm run eslint && npm run prettier:check",
        "lint:fix": "npm run eslint:fix && npm run prettier:fix",
        "test": "node --import tsx ./src/__tests__/test.global.runner.ts"
    },
    "author": "Ernest Dolog <ernest.dolog@gmail.com>",
    "license": "ISC",
    "typesVersions": {
        "*": {
            "*": [
                "build/index.d.ts",
                "build/plugins/koa/index.d.ts",
                "build/plugins/apollo-server/index.d.ts"
            ]
        }
    },
    "exports": {
        ".": {
            "import": "./build/index.js",
            "types": "./build/index.d.ts"
        },
        "./apollo-server": {
            "import": "./build/plugins/apollo-server/index.js",
            "types": "./build/plugins/apollo-server/index.d.ts"
        },
        "./routing-controllers": {
            "import": "./build/plugins/routing-controllers/index.js",
            "types": "./build/plugins/routing-controllers/index.d.ts"
        },
        "./routing-controllers/koa": {
            "import": "./build/plugins/routing-controllers/koa/index.js",
            "types": "./build/plugins/routing-controllers/koa/index.d.ts"
        },
        "./fastify": {
            "import": "./build/plugins/fastify/index.js",
            "types": "./build/plugins/fastify/index.d.ts"
        }
    },
    "imports": {
        "#pkg/*": "./build/*"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "engineStrict": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ernestdolog/npm-shared-package.git"
    },
    "peerDependencies": {
        "@apollo/server": "^4.10.2",
        "koa": "^2.15.2",
        "routing-controllers": "^0.10.4",
        "fastify": "^5.6.2"
    },
    "peerDependenciesMeta": {
        "@apollo/server": {
            "optional": true
        },
        "routing-controllers": {
            "optional": true
        },
        "koa": {
            "optional": true
        },
        "fastify": {
            "optional": true
        }
    },
    "devDependencies": {
        "@apollo/server": "^4.10.2",
        "@ernestdolog/logging": "^0.0.0",
        "koa": "^2.15.2",
        "routing-controllers": "^0.10.4",
        "tsx": "^4.7.1",
        "typedoc": "^0.27.6",
        "typescript": "^5.7.3",
        "fastify": "^5.6.2",
        "graphql": "^16.8.1"
    }
}
