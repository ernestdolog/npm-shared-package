{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "message": "chore(release): publish",
      "conventionalCommits": false
    },
    "publish": {
      "registry": "https://npm.pkg.github.com/"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "package-lock.json"
  ],
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
